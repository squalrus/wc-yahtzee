    "@typescript-eslint/parser": "^5.25.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "eslint": "^8.15.0",
    "lit-analyzer": "^2.0.3",
    "minify-html-literals-loader": "^1.1.1",
    "prettier": "^2.6.2",
    "ts-loader": "^9.5.1",
    "typescript": "~5.3.3",
